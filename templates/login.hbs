<!doctype html>
<html lang="en">
  <head>
  
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/loginDesign.css" >
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    
    <title>Cricket Manager | Login</title>
   
  </head>
  
  <style>
  @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@600&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Inter+Tight&display=swap');
/* grid */

.grid-container {
    display: grid;
    grid-template-rows: auto 1fr auto;
    height: 100vh;
   
  }
  
  .grid-container > div {
    text-align: center;
    place-items: center;
  }
  
  .item1 {
    grid-column: 1 / 4;
  }

  .item5 {
    grid-column: 1 / 4;
    
  }
  

/* grid end */

/* Navbar */



html{
    font-size: 62.5%;
}

*{
    box-sizing: border-box;margin: 0;padding: 0;
}

body{
    font-family: 'Open Sans', sans-serif;
    display: flex;
    flex-direction: column;
    height: 100vh;
}

*::selection {
    background-color: #ccc;
}

.flex-container {
    display: flex;
    background-color: #FFFFFF;
    box-shadow: 0px 6px 16px 0px rgba(0,0,0,0.2);
    border-radius: 10px;
    /* border-bottom: 1px solid whitesmoke; */
    -webkit-user-select: none; /* Safari */
    -ms-user-select: none; /* IE 10 and IE 11 */
    user-select: none; /* Standard syntax */
  }
  
.flex-container > div {
    padding: 20px;
    font-size: 1.6rem;
    color: #202124;
}

.flex-container .icon-app {
    color: #202124;
}


.flex-container .items {
    display: flex;
    justify-content: flex-end;
    flex-grow: 1;
}

.flex-container .emptySpace {
    flex-grow: 0.2;
}


.flex-container .toggleButton {
    cursor: pointer;
    line-height: 0px;
}

/* .flex-container .toggleButton:hover {
    background-color: #ccc;
    border-radius: 10px;
} */

.items > div {
    background-color: #FAFEFF;
    font-size: 1.6rem;
    color: #5674cd;
    padding: 0 1.5rem 0 1.5rem;
}


  


@media only screen and (max-width: 650px) {

    .flex-container .list {
        display: none;
    }

    .flex-container .emptySpace {
        display: none;
    }

    .flex-container .toggleButton {
        display: block;cursor: auto;
    }

   

}


@media only screen and (max-width: 300px) {

    .flex-container .list {
        display: none;
    }

    .flex-container .emptySpace {
        display: none;
    }

    .flex-container .material-symbols-outlined {
        font-size: 1.6rem;
    }

    .flex-container .logoName {
        font-size: 1.2rem;
    }

   

}

/* Navbar End */

/* Dropdown start */
.dropdown_container {
    flex-direction: column;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    border-radius: 10px;
    width: 160px;
    position: absolute;
    right: 120px;
    top: 75px;
    display: none;
    z-index: 1;cursor: pointer;
    padding: 5px;
}

.dropdown_container.show {
    display: flex;
    flex-direction: column;
}

.dropdown_container > div{
    font-size: 1.4rem;
    padding: 10px;
    text-align: left;
    border-radius: 50px;
    background-color: white;
    padding-left: 20px;
}

.dropdown_container > div a{
    text-decoration: none;
    color: #000;
}

.dropdown_container > div:hover{
    color: #202124;
    background-color: whitesmoke;
} 

@media only screen and (max-width: 768px) {
  .dropdown_container {
    width: 100%;
    right: 0;
    top: 70px;cursor:auto;
    
  }
}
/* Dropdown end */


/* Login box start */
.login-container {
    display: grid;
    grid-template-rows: 1fr ;
    background-color: #FFFFFF;
    margin-bottom: 4rem;
    /* border: 1px solid rgb(231, 228, 228); */
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    border-radius: 30px;
    align-items:center;
    margin-top: 50px;
  }
  
.login-container > div {
    text-align: center;
    font-size: 1.6rem;
    padding: 10px;
    font-family: 'Open Sans', sans-serif;
}

.input_edit{
    padding: 10px;
    outline: none;
    border: 2px solid #ccc;
    border-radius: 10px;
    box-shadow: inset 0 0 10px #FFFFFF;
}



.login-container .forgot_pass{
    font-size: 1.1rem;
}

.login-container .forgot_pass a{
    text-decoration: none;
    color: #202124;
}

.login-container .submit_btn {
    font-size: 1.4rem;
}

.login-container .submit_btn button{
    border: 2px solid #ccc;
    color: #202124;
    background-color: #FAFEFF;
    border-radius: 10px;
    padding: 5px 25px 5px 25px;
    cursor: pointer;
}
/* Login box End */

/* Footer Content */
/* add these styles to the footer */
.footer_container {
    height: 50px;
    background-color: #333;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0px 8px 16px 0px rgba(255, 0, 0, 0.2);
    border-radius: 10px;
}

.footer_content {
    font-size: 16px;
}

/* footer end */
  </style>
  
  <body>
   


<!-- grid div start -->
<div class="grid-container">
    <!-- Item 1 start-->
    <div class="item1">
        
        <!-- navbar -->

        <nav>
            <div class="flex-container">
                <div class="emptySpace"></div>
                <div class="logoName">CRICKET MANAGER</div>
                    <div class="items">
                        <div class="toggleButton" > <span class="material-symbols-outlined icon-app toggleit" onclick="fold()"> view_comfy_alt </span></div>
                    </div> 
                    
                <div class="emptySpace"></div>
            </div>
        </nav> 

        <!-- End of Navbar -->

        <!-- start of Dropdown Menu -->
        <div class="dropdown_container" style="display: none;">
            <div class="dropdown_item"><a href="/login">Login</a></div>
            <div class="dropdown_item"><a href="/signup">Signup</a></div>
        </div>
        <!-- End of Dropdown -->

    </div>
    <!-- item1 end -->

    <!-- Item 2 start -->
    <div class="item2"></div>
    <!-- Item 2 end -->
    <!-- Item 3 start -->
    <div class="item3">
        <!-- start of login box -->

        <div class="login-container">
            <div></div>
            <div class="login_txt">LOGIN TO CRICKET MANAGER</div>
            <div class="email_input">
                <input type="text" class="input_edit" id="email" placeholder="Email Address">
            </div>
            <div class="pass_input">
                <input type="password" class="input_edit" id="pass" placeholder="Password" >
            </div>
            <div class="submit_btn"><button id="Submitclick">Login Now</button></div>
            <div></div>
        </div>
        {{!-- Error Messages --}}
        <div class="d-flex justify-content-center">
            <div class="mb-3 row">
                <div class="col-sm-12">
                <p id="displayMessage" style="display:none;font-size:13px"></p>
            </div>
        </div>

    </div>
        <!-- End of login box -->
    </div> 
    <!-- Item 3 end -->
    <!-- Item 4 start --> 
    <div class="item4"></div>
    <!-- Item 4 end -->
    <!-- Item 5 start -->
    <div class="item5">
        <!-- Footer starts here -->
        <div class="footer_container">
            <div class="footer_content">COPYRIGHT@2023&nbsp;CRICKET&nbsp;MANAGER</div>
        </div>
            
        <!-- Footer end here -->
    </div>
    <!-- Item 5 start -->

</div>
<!-- rid div end -->



  <script type="text/javascript" src="/logininPassing.js"></script>
   </body>
</html>
